<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= stylesheet_pack_tag "blog", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "blog", 'data-turbolinks-track': "reload" %>
    
  </head>
  <body>
    <%= render "shared/blog_nav" %>
    <%= render "shared/blog_masthead" %>
    <div class="container">
      <div class="row">
        <%= yield %>
        <%= render "/shared/blog_sidebar" %>
      </div>
    </div>
    <%= render "/shared/blog_footer" %>
    <%= source_helper("blog") %>
  </div>
</body>
</html>
